<?xml version="1.0"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.webforj</groupId>
    <artifactId>webforj-plugins</artifactId>
    <version>25.10-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <packaging>pom</packaging>
  <artifactId>webforj-minify</artifactId>
  <name>${project.artifactId}</name>
  <description>Build-time asset minification system for webforJ applications</description>

  <modules>
    <module>webforj-minify-foundation</module>
    <module>webforj-minify-phcss-css</module>
    <module>webforj-minify-closure-js</module>
    <module>webforj-minify-maven-plugin</module>
    <module>webforj-minify-gradle-plugin</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <!-- Internal modules -->
      <dependency>
        <groupId>com.webforj</groupId>
        <artifactId>webforj-minify-foundation</artifactId>
        <version>${project.version}</version>
      </dependency>

      <!-- CSS minification (optional, for default implementation) -->
      <dependency>
        <groupId>com.helger</groupId>
        <artifactId>ph-css</artifactId>
        <version>8.0.0</version>
        <optional>true</optional>
      </dependency>

      <!-- JavaScript minification (optional, for default implementation) -->
      <!-- Note: Using v20230802 - last version compatible with Java 17 -->
      <dependency>
        <groupId>com.google.javascript</groupId>
        <artifactId>closure-compiler</artifactId>
        <version>v20230802</version>
        <optional>true</optional>
      </dependency>

      <!-- JSON processing for manifest generation -->
      <dependency>
        <groupId>com.google.code.gson</groupId>
        <artifactId>gson</artifactId>
        <version>2.10.1</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <plugins>
      <!-- Disable formatter plugin - conflicts with checkstyle Javadoc rules -->
      <plugin>
        <groupId>net.revelc.code.formatter</groupId>
        <artifactId>formatter-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>default</id>
            <phase>none</phase>
          </execution>
        </executions>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
